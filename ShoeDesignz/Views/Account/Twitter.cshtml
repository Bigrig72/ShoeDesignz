@model ShoeDesignz.Models.ViewModels.ExternalLoginViewModel
@using Microsoft.AspNetCore.Identity;
@using ShoeDesignz.Models;
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <title>Index Landing Page</title>
</head>
<body>
    <h1 class="display-4">Welcome to the Amazing ShoeZ Design</h1>


    <header>
        <div class="jumbotron jumbotron-fluid">

            @if (!SignInManager.IsSignedIn(User))
            {
                <h1>TWITTER LOGIN something</h1>
            }
            else
            {
                <a asp-controller="Cart" asp-action="Products">View Cart</a>
                <a asp-controller="Product" asp-action="Products">View Products</a>
            }

        </div>
    </header>
</body>
</html>

