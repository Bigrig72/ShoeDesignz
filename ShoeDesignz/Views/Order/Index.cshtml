@model List<ShoeDesignz.Models.Order>
@{
    ViewData["Title"] = "Index";
    var products = this.ViewContext.RouteData.Values["id"];
}

<h1>Order History</h1>
@foreach (var item in Model)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Order #</th>
                <th scope="col">Date</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">@item.ID</th>
                <td>@item.Now.Month/@item.Now.Day/@item.Now.Year</td>
                <td>@item.UserID</td>
                <td> <a asp-controller="Order" asp-route-id="@item.ID" asp-action="Details">View Order Details</a></td>
                <td></td>
            </tr>
        </tbody>
    </table>
}
<h4>Please check your email for a receipt of your order.</h4>

<a asp-controller="Product" asp-action="Products">Back to the store.</a>

<h6>Thank you for shopping at ShoeDesignz</h6>

